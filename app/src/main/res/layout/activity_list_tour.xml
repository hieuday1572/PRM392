<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ListTourActivity"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    >

    <ImageButton
        android:id="@+id/back_homepage_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_before"
        android:background="@android:color/transparent"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_tour_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour List"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_homepage_admin"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Title"
        android:layout_marginLeft="10dp"
        android:paddingRight="20dp"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_list"/>

    <TextView
        android:id="@+id/tv_location_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Location From"
        android:singleLine="false"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_list"
        />

    <TextView
        android:id="@+id/tv_location_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Location To"
        android:textSize="17dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_location_from"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_list"
        />
    <TextView
        android:id="@+id/tv_tour_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="17dp"
        android:text="Location To"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_location_to"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_list"
        />

    <TextView
        android:id="@+id/tv_price_per_person"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Location To"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_tour_time"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_list"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tour_list_recyle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
